{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "ES2022",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "buildOnSave": false
}
